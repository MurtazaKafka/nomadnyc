# Nomad agent service environment variables
# Copy to ../.env (root) or keep per-workspace as needed.

OPENAI_API_KEY=
PHENOML_API_KEY=
PHENOML_MODEL=nomad-email-priority
PHENOML_TIMEOUT_MS=1500
AIRIA_API_KEY=

# IMAP inbox configuration
IMAP_HOST=
IMAP_PORT=993
IMAP_SECURE=true
IMAP_USER=
IMAP_PASSWORD=
IMAP_MAILBOX=INBOX

# SMTP configuration for sending replies
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM_ADDRESS=

# Number of messages to sync per batch
EMAIL_SYNC_BATCH_SIZE=10
